{
    "manifest_version": 2,

    "name": "One-click Kittens",
    "description": "This extension demonstrates a browser action with kittens.",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["content.css", "battle/style.css"],
            "js": ["core.js", "battle/battle.js", "jquery.js", "content.js"]
        }
    ],
    "permissions": [
        "https://secure.flickr.com/",
        "storage"
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        "battle/images/facebook.png",
        "battle/images/github.png",
        "battle/index.html",
        "battle/script.js",
        "battle/battle.js",
        "battle/style.css"
    ]
}
