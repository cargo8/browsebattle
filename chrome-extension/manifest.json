{
    "manifest_version": 2,

    "name": "Browse Battle",
    "description": "Browse Battle allows you to engage in Pokemon-like battles across the web as you browse",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["content.css", "battle/style.css"],
            "js": ["core.js", "battle/battle.js", "jquery.js", "player.js", "content.js"]
        }
    ],
    "permissions": [
        "https://secure.flickr.com/",
        "storage",
        "tabs"
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        "battle/107-battle-vs-wild-pokemon-.mp3",
        "battle/index.html",
        "battle/script.js",
        "battle/battle.js",
        "battle/style.css"
    ]
}
